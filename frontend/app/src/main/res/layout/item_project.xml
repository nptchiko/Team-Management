<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:backgroundTint="@color/color_primary"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:cardPreventCornerOverlap="false"
    app:strokeColor="@color/purple_400"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="19dp"
        android:paddingEnd="14dp"
        android:paddingBottom="20dp"
        android:paddingTop="16dp">

        <!-- Title   -->

        <TextView
            android:id="@+id/tv_title_projectCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="@string/title"
            android:textColor="@color/brown_800"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_date_projectCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:hint="Due date"
                android:textColor="@color/brown_800"
                android:textSize="12sp" />
        </LinearLayout>

        <!--  State  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins"
                android:text="Team"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_team_count"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins_bold"
                android:text="36"
                android:textColor="@color/brown_800"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins"
                android:text="Tasks left"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_tasks_left"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins_bold"
                android:text="36"
                android:textColor="@color/brown_800"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins"
                android:text="Progress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_tasks_progress"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/poppins_bold"
                android:text="36%"
                android:textColor="@color/brown_800"
                android:textSize="12sp" />

        </LinearLayout>

        <ProgressBar
            android:layout_marginTop="5dp"
            android:id="@+id/progress_bar_projectCard"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:max="100"
            android:progress="36"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
