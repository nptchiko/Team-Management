<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="radius" format="dimension" />
    <attr name="topLeftRadius" format="dimension" />
    <attr name="topRightRadius" format="dimension" />
    <attr name="bottomLeftRadius" format="dimension" />
    <attr name="bottomRightRadius" format="dimension" />

    <declare-styleable name="CodiaRoundFlexboxLayout">
        <attr name="radius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
    </declare-styleable>

    <declare-styleable name="CodiaRoundImageView">
        <attr name="radius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
    </declare-styleable>

    <declare-styleable name="CodiaRoundFrameLayout">
        <attr name="widthHeightRadio" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomRightRadius" />
        <attr name="bottomLeftRadius" />
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="colorWhite" format="color" />
        <attr name="colorBlack" format="color" />
        <attr name="colorBlackTransparent10" format="color" />
        <attr name="colorBlackTransparent25" format="color" />
        <attr name="colorBlackTransparent75" format="color" />
        <attr name="colorBlackTransparent80" format="color" />
        <attr name="colorRed" format="color" />
        <attr name="colorGreen" format="color" />
        <attr name="colorTransparent" format="color" />
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
</resources>
